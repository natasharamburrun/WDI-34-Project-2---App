<div class= "container portfolio">
  <div class="columns">
    <div class="column is-half">
      <img src='<%= values[1].url %>' alt='<%= values[1].title %>'>
    </div>
    <div class="column is-half">
      <ul>
        <li><strong>Name: </strong> <%= values[1].name %> </li>
        <li><strong>Stylist price from:</strong> <%= values[1].price %> </li>
        <li><strong>About the stylist:</strong> <%= values[1].about %> </li>
      </ul>

      <% if(locals.isLoggedIn){%>
        <% if ((locals.currentUser.email === values[1].creator.email)){%>
        <a href="/portfolios/<%= values[1].id %>/edit">Edit</a>
        <form action="/portfolios/<%= values[1].id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button name="button">Delete Profile</button>
        </form>
        <% } %>
      <% } %>

      <form class="" action="/portfolios/<%= values[1].id %>/comment" method="post">
        <textarea name="content" rows="8" cols="80"></textarea>
        <button name="button">Post comment</button>
      </form

      <article class="media-content">
        <div = class="content">
          <% values[1].comments.forEach((comment) => { %>
            <div class="comment"><%= comment.content %>
            <form class="" action="/portfolios/<%= values[1].id %>/comment/<%= comment.id%>" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button name="button">Delete comment</button>
            </form>
            </div>
          <% }) %>
          <a href="/pictures/new">Add a picture</a>
        </div>
      </article>
    </div>
  </div>
  </div>


  <body>
    <section class="section">
      <div class="container">
        <h1 class="title">Portfolio</h1>
          <% console.log('values 0 ', values[0]); %>
          <% values[0].forEach( picture =>{ %>
            <a href='/pictures/<%= picture.id %>'></a>
            <img style="max-width: 200px " src='<%= picture.url %>' alt='<%= picture.title %>' />
            <% if(picture.creator){%>
                <%= picture.creator.username %>
          <% } %>
          <% }) %>
      </div>
    </section>
  </body>
