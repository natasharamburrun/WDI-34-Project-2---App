<div class="container-newPortfolio">
  <div class="notification">
    <h2><em>Add your new portfolio</em></h2>
    <form class="newPortfolio" action="/portfolios" method="post">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" name="name" id="name">
        </div>
      </div>
      <div class="field">
        <label class="label">Occupation</label>
        <div class="control">
          <input class="input" type="text" name="occupation" id="occupation">
        </div>
      </div>
      <div class="field">
        <label class="label">Salon Name</label>
        <div class="control">
          <input class="input" type="text" name="salon" id="salon" >
        </div>
      </div>
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="text" name="email" id="email">
        </div>
      </div>
      <div class="field">
        <label class="label">Address</label>
        <div class="control">
          <input class="input" type="text" name="address" id="address">
        </div>
      </div>
      <div class="field">
        <label class="label">Tel</label>
        <div class="control">
          <input class="input" type="text" name="tel" id="tel">
        </div>
      </div>
      <div class="field">
        <label class="label">About</label>
        <div class="control">
          <input class="input" type="text" name="about" id="about">
        </div>
      </div>
      <div class="field">
        <label class="label">Stylist Price Range</label>
        <div class="control">
          <input class="input" type="text" name="price" id="price">
        </div>
      </div>
      <div class="field">
        <label class="label">Image</label>
        <div class="control">
          <input class="input" type="text" name="url" id="url">
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link">Submit</button>
        </div>
        <div class="control">
          <button class="button is-text">Cancel</button>
        </div>
      </div>
    </form>
  </div>
</div>
