<h2>Stylist Portfolio</h2>

<div class="columns">
  <% portfolios.forEach((portfolio) => { %>
      <div class=" column is-one-third-desktop is-half-tablet">
        <div class="column">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <a href= '/portfolios/<%= portfolio.id %>'> <%= portfolio.title %></a>
                  <img style="max-width: 200px " src='<%= portfolio.url %>' alt='<%= portfolio.title %>' />
                    <% if (portfolio.creator) {%>
                  <%= portfolio.creator.user %>
                <% } %>
              </figure>
            </div>
          </div>
        </div>
      </div>
      <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img style="max-width: 200px " src='<%= portfolio.url %>' alt='<%= portfolio.title %>' />
            <% if (portfolio.creator) {%>
              <%= portfolio.creator.user %>
            <% } %>
          </figure>
        </div>
      </div>
    </div>
      <div class="media-content">
        <p class="name is-4">John Smith</p>
        <p class="email is-6">@johnsmith</p>
      </div>
      <div class="content">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        Phasellus nec iaculis mauris. <a>@bulmaio</a>.
        <a href="#">#css</a> <a href="#">#responsive</a>
      </div>
    </div>
  </div>
  <% }) %>
</div>
