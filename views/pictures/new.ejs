<form action="/pictures" method="post">
  <div class="field">
    <label class="label">Please enter your username: </label>
    <div class="control">
      <input class="input" type="text" name="username" id="username">
    </div>
  </div>
  <div class="field">
    <label class="label">Salon</label>
    <div class="control">
      <input class="input" type="text" name="salon" id="salon" >
    </div>
  </div>
  <div class="field">
    <label class="label">Image</label>
    <div class="control">
      <input class="input" type="text" name="url" id="url">
    </div>
  </div>
  <div class="field">
    <label class="label">Male/female</label>
    <div class="control">
      <input class="input" type="text" name="sex" id="sex">
    </div>
  </div>
  <div class="field">
    <label class="label">Hair Length</label>
    <div class="control">
      <input class="input" type="text" name="length" id="length">
    </div>
  </div>
  <div class="field">
    <label class="label">Service</label>
    <div class="control">
      <input class="input" type="text" name="service" id="service">
    </div>
  </div>
  <div class="field">
    <label class="label">Products Used</label>
    <div class="control">
      <input class="input" type="text" name="products" id="products">
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <button class="button is-text">Cancel</button>
    </div>
  </div>
</form>
